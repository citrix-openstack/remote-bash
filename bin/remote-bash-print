#!/bin/bash

function remote_bash() {
    local server

    server="$1"
    shift

    ssh -q \
        -o Batchmode=yes \
        -o StrictHostKeyChecking=no \
        -o UserKnownHostsFile=/dev/null \
        "$server" bash -s -- "$@"
}
LAST_LINE=$LINENO

head -n $(expr $LAST_LINE - 1) $0 | sed -e "s/remote_bash/$1/g"
